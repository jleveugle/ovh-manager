{
  "name": "ovh-manager",
  "version": "0.0.0",
  "description": "OVH Control Panel also known as Manager",
  "license": "BSD-3-Clause",
  "private": true,
  "engines": {
    "node": ">=8.11"
  },
  "scripts": {
    "build": "webpack --config ./packages/ovh-manager/webpack.config.js",
    "start": "webpack-serve ./packages/ovh-manager/webpack.config.js",
    "test": "yarn lint",
    "links": "ls -l node_modules/ | grep ^l || echo 'no linked packages'",
    "lint": "run-p lint:css lint:html lint:js lint:md",
    "lint:css": "stylelint 'packages/**/*.less'",
    "lint:html": "htmlhint 'packages/**/*.html'",
    "lint:js": "eslint --fix .",
    "lint:md": "remark -qf .",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.1",
    "@commitlint/config-angular": "^7.1.1",
    "conventional-changelog-cli": "^2.0.5",
    "htmlhint": "^0.10.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.3",
    "remark-cli": "^5.0.0",
    "remark-lint": "^6.0.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "lint-staged": {
    "*.html": [
      "htmlhint 'packages/**/*.html'"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.less": [
      "stylelint 'packages/**/*.less' --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "resolve": {
    "alias": {
      "jquery": "jquery/src/jquery"
    }
  }
}
