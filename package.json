{
  "private": true,
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.3",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "scripts": {
    "build": "webpack --config ./packages/ovh-manager/webpack.config.js",
    "start": "webpack-serve ./packages/ovh-manager/webpack.config.js",
    "links": "ls -l node_modules/ | grep ^l || echo 'no linked packages'",
    "lint": "run-p lint:css lint:js",
    "lint:css": "stylelint 'packages/**/*.less'",
    "lint:js": "eslint --fix .",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.less": [
      "stylelint 'packages/**/*.less' --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "resolve": {
    "alias": {
      "jquery": "jquery/src/jquery"
    }
  }
}
