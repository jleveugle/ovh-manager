{
  "private": true,
  "engines": {
    "node": ">=8.11"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.3",
    "remark-cli": "^5.0.0",
    "remark-lint": "^6.0.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "scripts": {
    "build": "webpack --config ./packages/ovh-manager/webpack.config.js",
    "start": "webpack-serve ./packages/ovh-manager/webpack.config.js",
    "test": "yarn lint",
    "links": "ls -l node_modules/ | grep ^l || echo 'no linked packages'",
    "lint": "run-p lint:css lint:js lint:md",
    "lint:css": "stylelint 'packages/**/*.less'",
    "lint:js": "eslint --fix .",
    "lint:md": "remark -qf .",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.less": [
      "stylelint 'packages/**/*.less' --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "resolve": {
    "alias": {
      "jquery": "jquery/src/jquery"
    }
  }
}
